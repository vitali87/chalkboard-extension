{
    "manifest_version": 3,
    "name": "Chalkboard Drawing",
    "version": "1.0",
    "description": "A minimal popup chalkboard extension for drawing with a mouse in black on a white background.",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": [
        "storage"
    ]
}